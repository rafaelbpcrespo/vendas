<h1>Listing clientes</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Endereco</th>
    <th>Email</th>
    <th>Celular</th>
    <th>Telefone principal</th>
    <th>Telefone secundario</th>
    <th>Ramal</th>
    <th>Empresa</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @clientes.each do |cliente| %>
  <tr>
    <td><%= cliente.nome %></td>
    <td><%= cliente.endereco %></td>
    <td><%= cliente.email %></td>
    <td><%= cliente.celular %></td>
    <td><%= cliente.telefone_principal %></td>
    <td><%= cliente.telefone_secundario %></td>
    <td><%= cliente.ramal %></td>
    <td><%= cliente.empresa_id %></td>
    <td><%= link_to 'Show', cliente %></td>
    <td><%= link_to 'Edit', edit_cliente_path(cliente) %></td>
    <td><%= link_to 'Destroy', cliente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

