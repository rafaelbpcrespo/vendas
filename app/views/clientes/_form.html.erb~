<%= form_for(@cliente) do |f| %>
  <% if @cliente.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cliente.errors.count, "error") %> prohibited this cliente from being saved:</h2>

      <ul>
      <% @cliente.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </div>
  <div class="field">
    <%= f.label :endereco %><br />
    <%= f.text_field :endereco %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :celular %><br />
    <%= f.text_field :celular %>
  </div>
  <div class="field">
    <%= f.label :telefone_principal %><br />
    <%= f.text_field :telefone_principal %>
  </div>
  <div class="field">
    <%= f.label :telefone_secundario %><br />
    <%= f.text_field :telefone_secundario %>
  </div>
  <div class="field">
    <%= f.label :ramal %><br />
    <%= f.text_field :ramal %>
  </div>
  <div class="field">
    <%= f.label :empresa_id %><br />
    <%= f.collection_select :empresa_id, Empresa.all, :id, :nome %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
